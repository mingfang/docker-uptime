{{range $podJson := getvs "/registry/pods/default/*"}}
  {{$pod := json $podJson}}
  //{{$pod.metadata.name}}
  {{range $container := $pod.spec.containers}}
  {{if $container.livenessProbe.httpGet}}

db.checks.findAndModify({
  query: {"name": "{{$pod.metadata.name}}"},
  update: { $setOnInsert: {"type" : "{{$container.livenessProbe.httpGet.scheme}}", "name" : "{{$pod.metadata.name}}", "url" : "http://{{$pod.status.podIP}}:{{$container.livenessProbe.httpGet.port}}{{$container.livenessProbe.httpGet.path}}", "tags" : ["{{$pod.metadata.labels.name}}"], "interval": 5000}},
  new: true,
  upsert: true
})

  {{end}}
  {{end}}
{{end}}
